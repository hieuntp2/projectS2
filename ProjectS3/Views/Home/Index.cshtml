@{
    ProjectS3.Models.ProjectS3Entities db = new ProjectS3.Models.ProjectS3Entities();
    List<ProjectS3.Models.HeadItem> headitems = db.HeadItem.ToList();
}

<section>
    <section id="slider">
        <!--slider-->
        <div class="container">
            <div class="row">
                <div class="col-sm-10 no-padding" style="padding-bottom:10px !important;">
                    <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                            <li data-target="#slider-carousel" data-slide-to="1"></li>
                            <li data-target="#slider-carousel" data-slide-to="2"></li>
                        </ol>

                        <div class="carousel-inner">
                            @for (int i = 0; i < headitems.Count; i++)
                            {
                                if (i == 0)
                                {
                                    <div class="item active">
                                        <div class="col-sm-12 no-padding">
                                            <a href="@headitems[i].href">
                                                <img src="@headitems[i].image" class="girl img-responsive" />
                                            </a>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="item">
                                         <div class="col-sm-12 no-padding">
                                             <a href="@headitems[i].href">
                                                 <img src="@headitems[i].image" class="girl img-responsive"/>
                                             </a>
                                         </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>

                </div>

                <div class="col-sm-2">
                    <div class="left-sidebar">
                        <h2>Thương hiệu</h2>
                        <div class="panel-group category-products" id="accordian">
                            @foreach (var item in db.ProductBranches)
                            {
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title"><a href="/home/branch/@item.Name">@item.Name</a></h4>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section><!--/slider-->
</section>
<script>
    function redirectitem(href) {
        window.location.href = href;
    }
</script>


