@model IEnumerable<ProjectS3.Models.DonHang>

@{
    ViewBag.Title = "history";
}

<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
        <div class="box box-info">
            <div class="box-header"><h4>Lịch sử mua hàng</h4></div>
            <div class="box-body">
                <div class="box-group" id="accordion">
                    @foreach (var item in Model)
                    {
                        <div class="panel box box-primary">
                            <div class="box-header with-border">
                                <h4 class="box-title">
                                    <a data-toggle="collapse" data-parent="#accordion" href="#@item.ID" aria-expanded="false" class="collapsed">
                                        [Mã: @item.ID] Ngày mua: @item.NgayTao
                                    </a>
                                </h4>
                            </div>
                            <div id="@item.ID" class="panel-collapse collapse" aria-expanded="false" style="height: 0px;">
                                <div class="box-body">
                                    <p>
                                        Tình trạng:
                                        @switch (item.TinhTrang)
                                        {
                                            case 0:
                                                <span class="badge bg-gray">Dã hủy</span>
                                                break;
                                            case 1:
                                            <span class="badge bg-red">Mới, đang đợi gọi xác nhận</span>
                                                break;
                                            case 2:
                                            <span class="badge bg-green-active">Đã gọi và đang chuẩn bị hàng</span>
                                                break;
                                            case 3:
                                            <span class="badge bg-blue-active">Đang gửi đi</span>
                                                break;
                                            case 4:
                                            <span class="badge bg-blue">Đã gửi đi và nhận tiền</span>
                                                break;
                                        }
                                    </p>
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <td>Tên mặt hàng</td>
                                                <td>Màu</td>
                                                <td>Kích thước</td>
                                                <td>Số lượng</td>
                                                
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var p in item.ChiTietDonHang)
                                            {
                                                <tr>
                                                    <td>
                                                        <a href="/home/sanpham/@p.SanPham.ID">@p.SanPham.Ten</a></td>
                                                    <td>@p.Color</td>
                                                    <td>@p.Size</td>
                                                    <td>@p.SoLuong</td>                                                    
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="box-footer"></div>
        </div>
    </div>
</div>
