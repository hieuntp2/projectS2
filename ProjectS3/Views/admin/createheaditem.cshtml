@model ProjectS3.Models.HeadItem

@{
    ViewBag.Title = "Tạo menu";
}

<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
        @Html.Partial("_my_break_bar_top")

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="box box-info">
                <div class="box-header">
                    <h3>Tạo menu</h3>
                </div>
                <div class="box-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-md-2">Link hình ảnh</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.image, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.image)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Tiêu đề</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.caption, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.caption)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Địa chỉ link khi chọn</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.href, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.href)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Loại</label>
                            <div class="col-md-10">
                                <select name="type">
                                    <option value="0">Menu chính</option>
                                    <option value="1">Menu phụ</option>
                                </select>
                                @*@Html.TextBoxFor(model => model.type, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.type)*@
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <input type="submit" value="Create" class="btn btn-success" style="float:right;" />
                    <a class="btn btn-default" href="../../admin">Hủy</a>
                </div>
            </div>

        }
    </div>
</div>