@using Microsoft.AspNet.Identity
@{
    ProjectS3.Models.AspNetUsers user = null;
    ProjectS3.Models.ProjectS3Entities db = new ProjectS3.Models.ProjectS3Entities();
    if (Request.IsAuthenticated)
    {
        string userid = User.Identity.GetUserId();
        user = db.AspNetUsers.SingleOrDefault(t => t.Id == userid);
    }
}
<header class="main-header" id="header">
    <nav class="navbar navbar-static-top" style=" padding-top: 10px;">
        <div class="container">
            <div>
                <div class="col-sm-2 navbar-header logo pull-left">
                    <a href="/home"><img src="~/content/myshopcontent/images/home/logo.png" alt="" /></a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="col-sm-7 collapse navbar-collapse" id="navbar-collapse" style=" padding-top: 5px; overflow-y:inherit;">
                    <ul class="nav navbar-nav">
                        <li class="my_header_menu_li text-center"><a href="/home/branch/JOINUS" style="color:black; background-color: transparent;">JOINUS</a></li>
                        <li class="my_header_menu_li text-center"><a href="/home/branch/COMPAGNA" style="color:black; background-color: transparent;">COMPAGNA</a></li>
                        <li class="my_header_menu_li text-center"><a href="/home/branch/YETTS" style="color:black;background-color: transparent;">YETTS</a></li>
                        <li class="my_header_menu_li text-center"><a href="/home/branch/y'sb" style="color:black;background-color: transparent;">y'sb</a></li>
                        <li class="my_header_menu_li text-center"><a href="/home/branch/TRUGEN" style="color:black;background-color: transparent;">TRUGEN</a></li>
                        <li class="my_header_menu_li text-center"><a href="/home/branch?id=S%2B" style="color:black;background-color: transparent;">S+</a></li>
                        <li class="my_header_menu_li text-center"><a href="/home/branch/TATE" style="color:black;background-color: transparent;">TATE</a></li>
                        <li class="my_header_menu_li text-center"><a href="/home/branch/BIND" style="color:black;background-color: transparent;">BIND</a></li>
                    </ul>

                </div>
                <!-- /.navbar-collapse -->
                <!-- Navbar Right Menu -->
                <div class="navbar-custom-menu col-sm-3">
                    <ul class="nav navbar-nav">
                        <!-- User Account Menu -->
                        <li class="dropdown user user-menu">
                            <!-- Menu Toggle Button -->
                            <a href="../../cart" style=" color: black;">
                                <!-- The user image in the navbar-->
                                <i class="fa fa-shopping-cart"></i> Giỏ hàng
                            </a>
                        </li>

                        <li class="dropdown user user-menu">
                            @if (Request.IsAuthenticated)
                            {
                                  <!-- Menu Toggle Button -->
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false" style=" color: black;">
                                    <!-- The user image in the navbar-->
                                    <i class="fa fa-user"></i> @user.HoTen
                                    <!-- hidden-xs hides the username on small devices so only the image appears. -->
                                </a>
                                <ul class="dropdown-menu">
                                    <!-- Menu Body -->
                                    <li class="user-body">

                                        @if (User.IsInRole("Admin"))
                                        {
                                            <div class="row">
                                                <div class="col-sm-12 text-center">
                                                    <a href="../../admin" style="background-color:white; text-decoration: none; font-size: 15px; font-family: inherit;">Quản lý website</a>
                                                </div>
                                            </div>
                                            <div class="clearfix"></div><hr />
                                        }

                                        @if (User.IsInRole("Moderate"))
                                        {
                                            <div class="row">
                                                <div class="col-sm-12 text-center">
                                                    <a href="../../moderate" style="background-color:white; text-decoration: none; font-size: 15px; font-family: inherit;">Quản lý sản phẩm/ bài viết</a>
                                                </div>
                                            </div>
                                            <div class="clearfix"></div><hr />
                                        }

                                        <div class="row">
                                            <div class="col-sm-12 text-center">
                                                <a href="../../cart/history" style="background-color:white; text-decoration: none; font-size: 15px; font-family: inherit;">Lịch sử mua hàng</a>
                                            </div>
                                        </div>
                                        <!-- /.row -->
                                    </li>
                                    <!-- Menu Footer-->
                                    <li class="user-footer">
                                        <div class="pull-left">
                                            <a href="../../manage" class="btn btn-default btn-flat">Tài khoản</a>
                                        </div>
                                        <div class="pull-right">
                                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                            {
                                                @Html.AntiForgeryToken()
                                                <div class="pull-right">
                                                    <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-default btn-flat">Đăng xuất</a>
                                                </div>
                                            }
                                        </div>
                                    </li>
                                </ul>
                            }
                            else
                            {
                                <a href="../../account/login" style=" color: black;">
                                    <!-- The user image in the navbar-->
                                    <i class="fa fa-lock"></i> Đăng nhập
                                    <!-- hidden-xs hides the username on small devices so only the image appears. -->
                                </a>
                            }
                        </li>
                    </ul>
                    <button style="color:red;" type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                        <i class="fa fa-bars"></i>
                    </button>
                </div>
                <!-- /.navbar-custom-menu -->
            </div>
        </div>
        <!-- /.container-fluid -->
    </nav>
</header>

<div class="clearfix"></div>
<hr />
<br />